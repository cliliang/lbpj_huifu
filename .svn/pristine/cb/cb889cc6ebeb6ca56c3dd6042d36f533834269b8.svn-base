<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin" />
    <include layout="@layout/common_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_item_layout_height"
        android:orientation="horizontal"
        android:background="@drawable/custom_item_layout_bg">

        <TextView
            android:layout_width="@dimen/recharge_title_width"
            android:layout_height="match_parent"
            android:text="@string/former_phone_number"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_40"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <EditText
            android:id="@+id/change_mobile_input_old_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15"
            android:textColorHint="@color/color_92"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"
            android:hint="@string/please_input_former_phone"/>

        <TextView
            android:id="@+id/change_mobile_send_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_40"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/for_get_phone_check_code"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_item_layout_height"
        android:orientation="horizontal"
        android:background="@drawable/custom_item_layout_bg">

        <TextView
            android:layout_width="@dimen/recharge_title_width"
            android:layout_height="match_parent"
            android:text="@string/phone_check_code"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_40"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <EditText
            android:id="@+id/change_mobile_input_old_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15"
            android:textColorHint="@color/color_92"
            android:hint="@string/please_input_check_code"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin" />
    <include layout="@layout/common_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_item_layout_height"
        android:orientation="horizontal"
        android:background="@drawable/custom_item_layout_bg">

        <TextView
            android:layout_width="@dimen/recharge_title_width"
            android:layout_height="match_parent"
            android:text="@string/account_login_psd"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_40"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <EditText
            android:id="@+id/change_mobile_input_login_psd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:maxLength="20"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15"
            android:textColorHint="@color/color_92"
            android:inputType="textPassword"
            android:hint="@string/change_phone_please_input_former_login_psd"/>

    </LinearLayout>

    <TextView
        android:id="@+id/change_mobile_next_step_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/next_step"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/font_size_17"
        android:enabled="false"
        android:background="@drawable/common_button_bg"
        android:layout_marginTop="22dp"
        android:layout_marginRight="@dimen/long_view_margin_left_right"
        android:layout_marginLeft="@dimen/long_view_margin_left_right"/>

</LinearLayout>