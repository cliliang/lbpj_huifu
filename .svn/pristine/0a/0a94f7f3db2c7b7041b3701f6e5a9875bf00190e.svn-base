<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin" />
    <include layout="@layout/common_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_item_height"
        android:background="@drawable/custom_item_layout_bg">

        <TextView
            android:layout_width="@dimen/recharge_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/recharge_usable_money"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/recharge_usable_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_70"
            android:textSize="@dimen/font_size_15"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_item_height"
        android:background="@drawable/custom_item_layout_bg">

        <TextView
            android:id="@+id/recharge_bank_show_text"
            android:layout_width="@dimen/recharge_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/recharge_bank_card"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <TextView
            android:id="@+id/recharge_bank_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_70"
            android:textSize="@dimen/font_size_15"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_item_layout_bg">

        <TextView
            android:id="@+id/recharge_show_text"
            android:layout_width="@dimen/recharge_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/recharge_money_count"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:background="@drawable/recharge_money_input_bg">

            <EditText
                android:id="@+id/recharge_input_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColorHint="@color/hint_text_color"
                android:gravity="left|center_vertical"
                android:textColor="@color/color_40"
                android:textSize="@dimen/font_size_15"
                android:background="@null"
                android:paddingLeft="@dimen/activity_horizontal_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_40"
                android:textSize="@dimen/font_size_15"
                android:layout_gravity="center_vertical|right"
                android:text="@string/recharge_money_unit"
                android:paddingRight="@dimen/activity_horizontal_margin"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/recharge_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/recharge"
        android:textSize="@dimen/font_size_17"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/common_button_bg"
        android:layout_marginLeft="@dimen/long_view_margin_left_right"
        android:layout_marginRight="@dimen/long_view_margin_left_right"
        android:layout_marginTop="25dp"/>

</LinearLayout>