<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin" />

    <include layout="@layout/common_horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_item_layout_height"
        android:background="@drawable/custom_item_layout_bg">

        <TextView
            android:layout_width="@dimen/recharge_title_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:text="@string/account_phone"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/change_psd_input_phone_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_input_phone_number"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/color_40"
            android:textColorHint="@color/color_92"
            android:textSize="@dimen/font_size_15" />

        <TextView
            android:id="@+id/change_psd_send_code_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/for_get_phone_check_code"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_item_layout_height"
        android:background="@drawable/custom_item_layout_bg">

        <TextView
            android:layout_width="@dimen/recharge_title_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:text="@string/phone_check_code"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/change_psd_input_code_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_input_check_code"
            android:inputType="number"
            android:textColor="@color/color_40"
            android:textColorHint="@color/color_92"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_item_layout_height"
        android:background="@drawable/custom_item_layout_bg">

        <TextView
            android:layout_width="@dimen/recharge_title_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:text="@string/new_login_psd"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/change_psd_input_psd_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_input_password"
            android:inputType="textPassword"
            android:maxLength="20"
            android:digits="@string/pas_digits"
            android:textColor="@color/color_40"
            android:textColorHint="@color/color_92"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_item_layout_height"
        android:background="@drawable/custom_item_layout_bg">

        <TextView
            android:layout_width="@dimen/recharge_title_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:text="@string/confirm_new_login_psd"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/change_psd_input_psd_again_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_input_psd_again"
            android:inputType="textPassword"
            android:maxLength="20"
            android:digits="@string/pas_digits"
            android:textColor="@color/color_40"
            android:textColorHint="@color/color_92"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>

    <TextView
        android:id="@+id/change_psd_submit_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/long_view_margin_left_right"
        android:layout_marginRight="@dimen/long_view_margin_left_right"
        android:layout_marginTop="22dp"
        android:background="@drawable/common_button_bg"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_17" />
</LinearLayout>