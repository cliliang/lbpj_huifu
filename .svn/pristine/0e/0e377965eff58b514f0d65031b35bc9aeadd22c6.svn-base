<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recalculate_view_bg"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/recalculate_total_number_view"
                style="@style/RecalculateStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textIsSelectable="true"
                android:gravity="center_vertical|right"
                android:paddingRight="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d9d9d9" />

            <TextView
                android:id="@+id/recalculate_remove_number_view"
                style="@style/RecalculateStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textIsSelectable="true"
                android:gravity="center_vertical|right"
                android:paddingRight="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d9d9d9" />

            <TextView
                android:id="@+id/recalculate_remain_number_view"
                style="@style/RecalculateStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textIsSelectable="true"
                android:gravity="center_vertical|right"
                android:paddingRight="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recalculate_clear_all_button"
                style="@style/RecalculateButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="AC" />

            <TextView
                android:id="@+id/recalculate_clear_one_button"
                style="@style/RecalculateButtonStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:text="@string/recalculate_clear" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recalculate_number_seven_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="7" />

            <TextView
                android:id="@+id/recalculate_number_eight_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="8" />

            <TextView
                android:id="@+id/recalculate_number_nine_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="9" />

            <TextView
                android:id="@+id/recalculate_division_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="÷" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recalculate_number_four_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4" />

            <TextView
                android:id="@+id/recalculate_number_five_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="5" />

            <TextView
                android:id="@+id/recalculate_number_six_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="6" />

            <TextView
                android:id="@+id/recalculate_multiplication_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="×" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recalculate_number_one_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1" />

            <TextView
                android:id="@+id/recalculate_number_two_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="2" />

            <TextView
                android:id="@+id/recalculate_number_three_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="3" />

            <TextView
                android:id="@+id/recalculate_subtraction_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recalculate_number_zero_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0" />

            <TextView
                android:id="@+id/recalculate_float_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="." />

            <TextView
                android:id="@+id/recalculate_equal_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="=" />

            <TextView
                android:id="@+id/recalculate_addition_view"
                style="@style/RecalculateNumberStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="＋" />
        </LinearLayout>


    </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/recalculate_share_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/transparent"/>
</LinearLayout>