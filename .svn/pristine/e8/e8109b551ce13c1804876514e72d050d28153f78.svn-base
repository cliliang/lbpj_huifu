<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:item="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <com.baluobo.common.views.ProductInfoItemView
            android:id="@+id/product_info_min_invest_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            item:infoTitle="@string/product_info_min_invest_money" />

        <com.baluobo.common.views.ProductInfoItemView
            android:id="@+id/product_info_back_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            item:infoTitle="@string/product_info_back_bank" />

        <com.baluobo.common.views.ProductInfoItemView
            android:id="@+id/product_info_start_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            item:infoTitle="@string/product_info_start_day" />




        <com.baluobo.common.views.ProductInfoItemView
            android:id="@+id/product_info_end_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            item:infoTitle="@string/product_info_end_day" />

        <com.baluobo.common.views.ProductInfoItemView
            android:id="@+id/product_info_back_account_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            item:infoTitle="@string/product_info_get_money_day" />

        <com.baluobo.common.views.ProductInfoItemView
            android:id="@+id/product_info_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            item:infoTitle="@string/product_calculate_income" />

        <com.baluobo.common.views.ProductInfoItemView
            android:id="@+id/product_info_back_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            item:infoTitle="@string/product_info_back_account_type" />

    </LinearLayout>
</ScrollView>