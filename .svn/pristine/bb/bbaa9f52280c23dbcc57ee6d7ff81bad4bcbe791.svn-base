<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custom_item_layout_bg"
        android:padding="@dimen/activity_horizontal_margin">
    <!-- -100dp-->
        <EditText
            android:id="@+id/feedback_input_view"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="top|left"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_13"
            android:textColorHint="@color/color_92"
            android:background="@null"
            android:maxLength="200"
            android:hint="@string/feedback_input_hint"
            android:lineSpacingExtra="5dp"/>

        <TextView
            android:id="@+id/feedback_input_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_92"
            android:layout_gravity="bottom|right"
            android:text="0/200"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_item_height"
        android:background="@drawable/custom_item_layout_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15"
            android:text="@string/please_leave_contact"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>

        <EditText
            android:id="@+id/feedback_input_contacts_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColorHint="@color/color_92"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:maxLength="40"
            android:hint="@string/feedback_contacts"
            android:gravity="left|center_vertical"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_70"
            android:gravity="center"
            android:text="@string/feedback_leave_contacts_msg"/>
    </LinearLayout>

    <include layout="@layout/common_horizontal_line"/>

    <Button
        android:id="@+id/feedback_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_18"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="@dimen/long_view_margin_left_right"
        android:layout_marginRight="@dimen/long_view_margin_left_right"
        android:background="@drawable/common_button_bg"/>
</LinearLayout>