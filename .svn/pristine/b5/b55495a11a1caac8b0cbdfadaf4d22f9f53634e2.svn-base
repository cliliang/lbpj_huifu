<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/common_dialog_shape_bg"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_success_title"
            android:textColor="#ffca2a"
            android:textSize="20sp"
            android:layout_marginTop="11dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sign_success_bg"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/sign_success_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_success_score_add"
            android:textColor="@color/colorBase"
            android:layout_marginTop="8dp"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/sign_success_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_success"
            android:layout_marginTop="9dp"
            android:textColor="@color/color_92"
            android:textSize="@dimen/font_size_11"
            android:layout_marginBottom="11dp"/>

    </LinearLayout>
    

</LinearLayout>