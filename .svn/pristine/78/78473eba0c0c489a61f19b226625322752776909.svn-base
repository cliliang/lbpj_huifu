<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin" />

    <include layout="@layout/common_horizontal_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_item_layout_height"
        android:orientation="horizontal"
        android:background="@drawable/common_input_view_bg"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:minWidth="70dp"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_40"
            android:text="@string/new_phone_number"/>
        <EditText
            android:id="@+id/change_mobile_input_new_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/font_size_15"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/color_40"
            android:textColorHint="@color/color_92"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:hint="@string/please_input_new_phone_number"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/change_mobile_send_new_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_40"
            android:text="@string/for_get_phone_check_code"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_item_layout_height"
        android:background="@drawable/common_input_view_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:minWidth="70dp"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_40"
            android:text="@string/phone_check_code"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        <EditText
            android:id="@+id/change_mobile_input_new_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:textColorHint="@color/color_92"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/color_40"
            android:hint="@string/please_input_check_code"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:id="@+id/change_mobile_complete_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/font_size_17"
        android:layout_marginLeft="@dimen/long_view_margin_left_right"
        android:background="@drawable/common_button_bg"
        android:layout_marginRight="@dimen/long_view_margin_left_right"
        android:layout_marginTop="22dp"/>

</LinearLayout>