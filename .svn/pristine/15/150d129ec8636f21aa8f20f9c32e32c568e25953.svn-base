<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:item="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/product_detail_ding_tou_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:visibility="gone"
            android:orientation="vertical">

            <com.baluobo.common.views.ProductInfoItemView
                android:id="@+id/product_info_min_invest_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                item:infoTitle="@string/product_info_min_invest_money" />

            <com.baluobo.common.views.ProductInfoItemView
                android:id="@+id/product_info_back_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                item:infoTitle="@string/product_info_back_bank" />

            <com.baluobo.common.views.ProductInfoItemView
                android:id="@+id/product_info_back_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                item:infoTitle="@string/product_info_back_account_type" />

            <com.baluobo.common.views.ProductInfoItemView
                android:id="@+id/product_info_start_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                item:infoTitle="@string/product_info_start_day" />

            <com.baluobo.common.views.ProductInfoItemView
                android:id="@+id/product_info_end_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                item:infoTitle="@string/product_info_end_day" />

            <com.baluobo.common.views.ProductInfoItemView
                android:id="@+id/product_info_back_account_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                item:infoTitle="@string/product_info_get_money_day" />

            <com.baluobo.common.views.ProductInfoItemView
                android:id="@+id/product_info_calculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                item:infoTitle="@string/product_calculate_income" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/product_detail_yin_piao_miao_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_40"
                    android:text="@string/product_info_back_account_type"
                    android:textSize="@dimen/font_size_13"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="@string/money_back_type1"
                    android:textSize="@dimen/font_size_13"
                    android:textColor="@color/color_66"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_detail_show_yin_piao_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_40"
                    android:text="@string/product_audit"
                    android:textSize="@dimen/font_size_13"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_piao_ju"
                    android:textColor="@color/colorBase"
                    android:textSize="@dimen/font_size_13"/>
                <com.baluobo.common.views.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_string_arrow_right"
                    android:textColor="@color/colorBase"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/font_size_11"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_audit_ticket_baozhang_content"
                android:textSize="@dimen/font_size_13"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/color_66"/>
        </LinearLayout>

    </FrameLayout>


</ScrollView>