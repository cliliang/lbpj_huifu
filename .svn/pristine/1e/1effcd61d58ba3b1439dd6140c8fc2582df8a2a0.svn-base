<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:input="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/long_view_margin_left_right"
    android:orientation="vertical">

    <com.baluobo.common.views.CustomInputView
        android:id="@+id/register_input_phone_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        input:hintText="@string/please_input_phone_number"
        input:iconVisible="false"
        input:buttonText="@string/for_get_phone_check_code"
        input:buttonVisible="true"/>

    <com.baluobo.common.views.CustomInputView
        android:id="@+id/register_input_code_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        input:hintText="@string/please_input_check_code"
        input:iconVisible="false"
        input:buttonVisible="false"/>

    <com.baluobo.common.views.CustomInputView
        android:id="@+id/register_input_psd_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        input:hintText="@string/please_input_password"
        input:setPassword="true"
        input:iconVisible="true"
        input:buttonVisible="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/register_accept_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_70"
            android:textSize="@dimen/font_size_13"
            android:text="@string/read_use_service_list"/>
        <TextView
            android:id="@+id/register_service_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="22dp"
            android:textColor="@color/color_70"
            android:textSize="@dimen/font_size_13"
            android:text="@string/use_service_list"/>
    </LinearLayout>

    <TextView
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:textSize="@dimen/font_size_17"
        android:textColor="@color/white"
        android:background="@drawable/common_button_bg"
        android:text="@string/register"/>

</LinearLayout>