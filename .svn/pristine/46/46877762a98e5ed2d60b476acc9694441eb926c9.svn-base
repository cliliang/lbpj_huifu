<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="@dimen/invite_dialog_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/common_dialog_shape_bg">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="@string/invite_record"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_15"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/invite_dialog_list_view"
            android:layout_width="@dimen/invite_dialog_width"
            android:layout_height="280dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/invite_dialog_dismiss_button"
        android:layout_width="@dimen/invite_dialog_width"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_close" />

    </LinearLayout>

</LinearLayout>