<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:background="@drawable/fuli_left">

                <TextView
                    android:id="@+id/red_packet_money_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/red_packet_icon_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/red_packet_money_id"
                    android:layout_alignLeft="@id/red_packet_money_id"
                    android:text="@string/rmb_icon"
                    android:textSize="@dimen/font_size_11" />

                <TextView
                    android:id="@+id/red_packet_type_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/red_packet_money_id"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/font_size_12" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/fuli_right"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/red_packet_content_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="8dp"
                        android:textSize="@dimen/font_size_12"
                        android:textColor="@color/color_40" />

                    <TextView
                        android:id="@+id/red_packet_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBase"
                        android:textSize="@dimen/font_size_12"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/red_packet_ben_jin_rule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ben_jin_red_packet_use_role"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/colorBase"
                        android:textSize="@dimen/font_size_12"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/red_packet_pass_type_mark_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="12dp"/>
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/red_packet_line_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:background="@color/line_color"/>

    </LinearLayout>


</LinearLayout>