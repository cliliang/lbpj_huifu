<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_shape_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="@dimen/font_size_15"
        android:textColor="@color/color_40"
        android:layout_marginBottom="35dp"
        android:text="@string/about_luobo_coin_dialog_content"
        android:lineSpacingExtra="10dp"/>

    <include layout="@layout/common_horizontal_line"/>

    <TextView
        android:id="@+id/luobo_icon_dialog_sure_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/ok"
        android:gravity="center"
        android:textColor="@color/color_40"
        android:textSize="@dimen/font_size_15"/>



</LinearLayout>