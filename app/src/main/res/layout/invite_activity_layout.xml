<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <TextView
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/total_invite_money"
                android:textColor="@color/color_40"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/line_color" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/invite_money_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorBase"
                android:textSize="@dimen/font_size_33" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/invite_money_view"
                android:layout_toRightOf="@id/invite_money_view"
                android:text="@string/recharge_money_unit"
                android:textColor="@color/color_40"
                android:textSize="@dimen/font_size_11" />

        </RelativeLayout>

        <TextView
            android:id="@+id/show_all_invite_people_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:paddingTop="25dp"
            android:text="累计邀请0人&gt;&gt;"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/invite_people_desc"
            android:textColor="@color/color_40"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/invite_friend_give"
            android:textColor="@color/colorBase"
            android:textSize="@dimen/font_size_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="163dp"
                android:layout_height="106dp"
                android:src="@drawable/icon_red_packet" />

            <LinearLayout
                android:id="@+id/show_invite_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/invite_code_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_my_invite_code"
                    android:textSize="@dimen/font_size_18"
                    android:textColor="@color/color_40"/>

                <TextView
                    android:id="@+id/copy_invite_code_button"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:background="@drawable/redeem_button_bg"
                    android:textColor="@color/colorBase"
                    android:text="@string/copy"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/invite_now_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/long_view_margin_left_right"
        android:layout_marginRight="@dimen/long_view_margin_left_right"
        android:layout_marginTop="15dp"
        android:background="@drawable/common_button_bg"
        android:gravity="center"
        android:text="@string/invite_now"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_15" />

    <TextView
        android:id="@+id/invite_blank_line"
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>