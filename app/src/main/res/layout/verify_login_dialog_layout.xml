<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_shape_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/verify_input_psd_view"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="5dp"
        android:hint="@string/please_input_password"
        android:background="@drawable/show_verify_login_psd_dialog_input_bg"
        android:gravity="center_vertical"
        android:textColor="@color/color_92"
        android:textSize="@dimen/font_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/verify_cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_92"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/verify_ok_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/color_92"
            android:textSize="@dimen/font_size_14" />


    </LinearLayout>

</LinearLayout>