<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/experience_map_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/experience_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/experience_big_image" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/experience_text_image" />

            </LinearLayout>

            <TextView
                android:id="@+id/experience_block_view"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_below="@id/experience_map_layout" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/experience_block_view"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"
                android:src="@drawable/experience_btn" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/experience_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBase"
                        android:textSize="@dimen/font_size_33" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/experience_rate"
                        android:layout_toRightOf="@id/experience_rate"
                        android:textColor="@color/color_92"
                        android:textSize="@dimen/font_size_11"
                        android:text="@string/calculate_year_rate_hint" />

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_92"
                    android:textSize="@dimen/font_size_11"
                    android:text="@string/experience_ticket_rate" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/experience_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_40"
                        android:textSize="@dimen/font_size_33" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/experience_day"
                        android:layout_toRightOf="@id/experience_day"
                        android:textColor="@color/color_92"
                        android:textSize="@dimen/font_size_11"
                        android:text="@string/calculate_day" />

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_92"
                    android:textSize="@dimen/font_size_11"
                    android:text="@string/experience_ticket_day" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/experience_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_40"
                        android:textSize="@dimen/font_size_33" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_92"
                        android:textSize="@dimen/font_size_11"
                        android:layout_alignBaseline="@id/experience_money"
                        android:layout_toRightOf="@id/experience_money"
                        android:text="@string/recharge_money_unit" />

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_92"
                    android:textSize="@dimen/font_size_11"
                    android:text="@string/experience_ticket_money" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/experience_gold_join_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/long_view_margin_left_right"
            android:layout_marginRight="@dimen/long_view_margin_left_right"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_button_bg"
            android:gravity="center"
            android:enabled="false"
            android:text="@string/buy_now"
            android:textColor="@color/common_button_text_color_selector"
            android:textSize="@dimen/font_size_18" />

    </LinearLayout>

</ScrollView>