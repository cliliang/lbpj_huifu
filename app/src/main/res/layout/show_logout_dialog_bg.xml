<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_shape_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingTop="45dp"
        android:paddingBottom="45dp"
        android:textSize="@dimen/font_size_15"
        android:textColor="@color/color_40"
        android:gravity="center"
        android:text="@string/logout_current_account"/>
    <include layout="@layout/common_horizontal_line"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/logout_dialog_cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#3fa7d5"
            android:textSize="@dimen/font_size_18"/>

        <TextView
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@color/line_color"/>
        <TextView
            android:id="@+id/logout_dialog_ok_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/colorBase"
            android:textSize="@dimen/font_size_18"/>

    </LinearLayout>


</LinearLayout>