<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/main_tab_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_home_selected"
        android:drawablePadding="5dp"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/font_size_10"
        android:layout_centerInParent="true"
        android:textColor="@color/main_tab_icon_text_color"
        android:text="@string/home_tag"/>

    <TextView
        android:id="@+id/main_tab_dot_id"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/main_tab_dot_view_bg"
        android:layout_toRightOf="@id/main_tab_title_id"/>
</RelativeLayout>